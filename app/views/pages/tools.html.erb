  <!-- Ask the chatbot -->
  <h1>Ask the Chatbot</h1>

  <%= form_with url: root_path, method: :get, local: true do %>
    <div class="form-group">
      <%= label_tag :user_input, "Enter your question:" %>
      <%= text_field_tag :user_input, params[:user_input], class: "form-control" %>
    </div>
    <div class="form-group">
      <%= submit_tag "Submit", class: "btn btn-primary" %>
    </div>
  <% end %>

  <% if @chatbot.present? %>
    <h2>Response from Chatbot:</h2>
    <p><%= @chatbot %></p>
  <% end %>
  <!--end-->
