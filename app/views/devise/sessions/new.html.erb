<div class="container">
  <div class="row">
    <div class="col-md-6 d-flex align-items-center justify-content-center">
      <div class="card w-100 h-100 d-flex align-items-center justify-content-center p-3">
        <div class="card-header text-center w-100">
          Log in
        </div>
        <div class="card-body w-100">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group mb-3">
              <%= f.input :email, 
                          required: false, 
                          autofocus: true, 
                          input_html: { class: 'form-control', autocomplete: "email" } %>
            </div>
            <div class="form-group mb-3">
              <%= f.input :password, 
                          required: false, 
                          input_html: { class: 'form-control', autocomplete: "current-password" } %>
            </div>
            <div class="form-group form-check mb-3">
              <%= f.input :remember_me, as: :boolean, label: "Remember me", input_html: { class: 'form-check-input' } if devise_mapping.rememberable? %>
            </div>
            <div class="form-group d-flex justify-content-center mb-3">
              <%= f.button :submit, "Log in", class: "btn btn-dark w-70" %>
            </div>
            <div class="form-group d-flex justify-content-center flex-column align-items-center">
              <%= render "devise/shared/links" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-md-6 d-flex align-items-center justify-content-center">
      <div class="card w-100 h-100 d-flex align-items-center justify-content-center">
        <div class="card-body d-flex align-items-center justify-content-center">
          <!-- carousel -->
          <%= render partial: "shared/carousel" %>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .card {
    min-height: 100%;
  }
  .card-body {
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  .form-group {
    width: 100%;
  }
  .w-70 {
    width: 70%;
  }
  .carousel-inner img {
    max-height: 100%;
    object-fit: cover;
  }
  .card-header {
    width: 100%;
  }
  .form-group .devise-links {
    margin-top: 1rem;
  }
</style>
