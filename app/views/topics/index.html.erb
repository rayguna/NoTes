<style>
  /* Add this in your application.css or custom CSS file */
  .dropdown:hover .dropdown-menu {
    display: block;
  }
</style>

<p class="text-success"><%= notice %></p>

<div class="container mt-4">
  <div class="container mt-4">
    <div class="row mb-4">
      <!-- Heading -->
      <div class="col-md-8">
        <h1>Notes</h1>
      </div>

      <!-- Search Form in Dropdown -->
      <div class="col-md-4">
        <div class="dropdown">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="searchDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Search
            </button>
            <div class="dropdown-menu p-3" aria-labelledby="searchDropdown">
              <%= search_form_for @q, url: notes_path, method: :get, html: { class: "form-inline" } do |f| %>
                <div class="form-group">
                  <%= f.label :title_cont, "Title contains", class: "sr-only" %>
                  <%= f.search_field :title_cont, class: "form-control mr-2", placeholder: "Title" %>
                </div>
                <div class="form-group">
                  <%= f.label :content_cont, "Content contains", class: "sr-only" %>
                  <%= f.search_field :content_cont, class: "form-control mr-2", placeholder: "Content" %>
                </div>
                <div class="form-group">
                  <%= f.label :topic_name_cont, "Topic contains", class: "sr-only" %>
                  <%= f.search_field :topic_name_cont, class: "form-control mr-2", placeholder: "Topic" %>
                </div>
                <%= f.submit "Search", class: "btn btn-primary" %>
              <% end %>
            </div>
          </div>
      </div>
    </div>
  </div>
  
  <div class="row">
    <% @notes.each do |note| %>
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title"><%= note.title %></h5>
            <p class="card-text"><%= truncate(note.content, length: 100) %></p>
            <p class="card-text"><small class="text-muted">Topic: <%= note.topic_name %></small></p>
            <p class="card-text"><small class="text-muted">Created At: <%= note.created_at.strftime("%B %d, %Y") %></small></p>
            <a href="<%= note_path(note) %>" class="btn btn-primary">Show this note</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="mt-4">
    <%= link_to "New note", new_note_path, class: "btn btn-success" %>
  </div>
</div>
