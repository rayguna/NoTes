<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="mb-3">
    <%= f.input :email, 
                required: false, 
                autofocus: true, 
                input_html: { class: 'form-control', autocomplete: "email" } %>
  </div>
  <div class="mb-3">
    <%= f.input :password, 
                required: false, 
                input_html: { class: 'form-control', autocomplete: "current-password" } %>
  </div>
  <div class="form-check mb-3">
    <%= f.input :remember_me, as: :boolean, label: "Remember me", input_html: { class: 'form-check-input' } if devise_mapping.rememberable? %>
  </div>
  <div class="d-flex justify-content-center gap-2 mb-3">
    <%= f.button :submit, "Log in", class: "btn btn-primary" %>
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
  </div>
  <div class="d-flex justify-content-center flex-column align-items-center">
    <%= render "devise/shared/links" %>
  </div>
<% end %>
