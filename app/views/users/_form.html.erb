  </div>

  <div>
    <%= form.label :remember_created_at, style: "display: block" %>
    <%= form.datetime_field :remember_created_at %>
  </div>

  <div>
    <%= form.label :reset_password_sent_at, style: "display: block" %>
    <%= form.datetime_field :reset_password_sent_at %>
  </div>

  <div>
    <%= form.label :reset_password_token, style: "display: block" %>
    <%= form.text_field :reset_password_token %>
  </div>

  <div>
    <%= form.label :username, style: "display: block" %>
    <%= form.text_field :username %>
  </div>

  <div>
    <%= form.submit %>
