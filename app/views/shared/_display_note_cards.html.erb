  <% notes.each do |note| %>
  <% if note.topic_type == "note" %>
    <div class="col-md-4 mb-3">
      <div class="card h-100">
        <div class="card-body position-relative">
          <%= render partial: 'notes/note', locals: { note: note } %>
          <div class="position-absolute" style="top: 10px; right: 10px;">
            <div class="row">
              <div class="col-auto">
                <%= link_to edit_note_path(note), method: :get, class: "text-primary" do %>
                  <i class="fa-solid fa-pen-to-square"></i>
                <% end %>
              </div>
              <div class="col-auto">
                <%= link_to note, method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "text-primary" do %>
                  <i class="fa-solid fa-trash"></i>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% else %>
    <div class="col-md-4 mb-3">
      <div class="card h-100">
        <div id="accordion<%= note.id %>">
          <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center" id="heading<%= note.id %>">
              <h5 class="mb-0">
                <button class="btn btn-link no-underline" data-toggle="collapse" data-target="#collapse<%= note.id %>" aria-expanded="false" aria-controls="collapse<%= note.id %>">
                  <%= note.title %>
                </button>
              </h5>
              <div>
                <%= link_to edit_note_path(note), method: :get, class: "text-primary mr-2" do %>
                  <i class="fa-solid fa-pen-to-square"></i>
                <% end %>
                <%= link_to note, method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "text-primary" do %>
                  <i class="fa-solid fa-trash"></i>
                <% end %>
              </div>
            </div>
            <div id="collapse<%= note.id %>" class="collapse" aria-labelledby="heading<%= note.id %>" data-parent="#accordion<%= note.id %>">
              <div class="card-body">
                <%= render_markdown(note.content) %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
</div>
