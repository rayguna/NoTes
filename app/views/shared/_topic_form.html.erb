<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8 mb-4">
      <div class="card organic-card">
        <div class="card-body organic-card-body p-4">
          <%= form_with(model: @topic, local: true, id: 'topic-form') do |form| %>
            <% if @topic.errors.any? %>
              <div style="color: red">
                <h2><%= pluralize(@topic.errors.count, "error") %> prohibited this topic from being saved:</h2>
                <ul>
                  <% @topic.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <!-- Add your form fields here -->
            <div class="form-group">
              <%= form.label :name %>
              <%= form.text_field :name, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= form.label :topic_type %>
              <%= form.text_field :topic_type, class: "form-control", readonly: true %>
            </div>

            <div class="form-group">
              <%= form.submit "Save", class: "btn btn-primary" %>
            </div>
            
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
