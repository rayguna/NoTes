<%= javascript_include_tag 'application', 'data-turbo-track': 'reload' %>

<div class="table-responsive">
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <!-- Adding inline styles for white font color and sort links with icons -->
        <th scope="col" style="color: white;">
          <%= link_to "Title".html_safe + (params[:sort] == 'title' && params[:direction] == 'asc' ? ' ▼' : ''), { sort: 'title', direction: (params[:sort] == 'title' && params[:direction] == 'asc' ? 'desc' : 'asc') }, data: { turbo_frame: "_top" } %>
        </th>
        <th scope="col" style="color: white;">
          <%= link_to "Created At".html_safe + (params[:sort] == 'created_at' && params[:direction] == 'asc' ? ' ▼' : ''), { sort: 'created_at', direction: (params[:sort] == 'created_at' && params[:direction] == 'asc' ? 'desc' : 'asc') }, data: { turbo_frame: "_top" } %>
        </th>
        <th scope="col" style="color: white;">Action</th>
      </tr>
    </thead>
    <tbody>
      <% notes.each do |note| %>
        <tr>
          <td><%= note.title %></td>
          <td><%= note.created_at.strftime("%B %d, %Y") %></td>
          <td>
            <a href="<%= url_for([note, { topic_type: params[:topic_type], display_as: params[:display_as] }]) %>" class="btn btn-primary btn-sm">
              <i class="fa-solid fa-eye"></i> 
            <a href="#" class="btn btn-primary btn-sm">
              <i class="fa-solid fa-pen-to-square"></i> 
            <a href="#" class="btn btn-primary btn-sm">
              <i class="fa-solid fa-trash"></i> 
            </a>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
