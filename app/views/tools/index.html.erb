<!-- app/views/tools/index.html.erb -->
<h1>Search Tools</h1>

<%= form_with(url: tools_path, method: :get, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :search_query, "Search Query" %>
    <%= form.text_field :search_query, value: @search_query, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :fields, "Search Fields" %>
    <%= form.select :fields, options_for_select([['All Fields', 'all'], ['Title Only', 'title'], ['Content Only', 'content']], selected: params[:fields]), class: "form-control" %>
  </div>

  <%= form.submit "Search", class: "btn btn-primary" %>
<% end %>

<h2>Search Results</h2>

<% if @total_results && @total_results > 0 %>
  <p><%= pluralize(@total_results, "result") %> found.</p>
  
  <h3>Notes</h3>
  <ul>
    <% @results[:notes].each do |note| %>
      <li>
        <strong><%= link_to note.title, note_path(note) %></strong><br>
        <%= truncate(note.content, length: 100) %>
      </li>
    <% end %>
  </ul>
  
  <h3>Topics</h3>
  <ul>
    <% @results[:topics].each do |topic| %>
      <li>
        <strong><%= link_to topic.name, topic_path(topic) %></strong>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No results found.</p>
<% end %>
