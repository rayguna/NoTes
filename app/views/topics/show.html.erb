<p class="text-success"><%= notice %></p>

<!-- Render the topic -->
<div class="mb-4">
  <%= render @topic %>
</div>

<!-- Action Buttons -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <%= link_to "Edit this topic", edit_topic_path(@topic), class: "btn btn-primary me-2" %>
  <%= link_to "Back to topics", topics_path, class: "btn btn-secondary me-2" %>
  <%= button_to "Destroy this topic", @topic, method: :delete, class: "btn btn-danger" %>
</div>

<!-- Notes Section -->
<% notes = Note.where(topic_id: @topic.id) %>

<div id="notes" class="container">
  <div class="row">
    <% notes.each do |note| %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= note.title %></h5>
            <p class="card-text"><%= note.content %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<!-- Link to create a new topic -->
<%= link_to "New note", new_note_path, class: "btn btn-success mt-4" %>
