<h1 class="text-center mb-4">Search noTes</h1>

<div class="d-flex justify-content-center">
  <div class="card p-4 shadow-sm" style="max-width: 600px; width: 100%;">
    <%= form_with url: search_path, method: :get, local: true, class: "form-row align-items-center", id: "search-form" do %>
      
      <div class="col-12 mb-3">
        <%= label_tag :all_fields, "Search All Fields", class: "font-weight-bold" %>
        <%= text_field_tag :all_fields, params[:all_fields], class: "form-control", placeholder: "Enter keyword(s)..." %>
      </div>
      
      <div class="col-12 mb-3">
        <%= label_tag :topic_name_cont, "Search by Topic", class: "font-weight-bold" %>
        <%= text_field_tag :topic_name_cont, params[:topic_name_cont], class: "form-control", placeholder: "Enter topic..." %>
      </div>
      
      <div class="col-12 mb-3">
        <%= label_tag :title_cont, "Search by Title", class: "font-weight-bold" %>
        <%= text_field_tag :title_cont, params[:title_cont], class: "form-control", placeholder: "Enter title..." %>
      </div>
      
      <div class="col-12 mb-3">
        <%= label_tag :content_cont, "Search by Content", class: "font-weight-bold" %>
        <%= text_field_tag :content_cont, params[:content_cont], class: "form-control", placeholder: "Enter content..." %>
      </div>
      
      <div class="col-12 mb-3">
        <div class="form-check">
          <%= check_box_tag :match_case, '1', params[:match_case].present?, class: "form-check-input" %>
          <%= label_tag :match_case, "Match Case", class: "form-check-label" %>
        </div>
      </div>

      <div class="col-12 text-center">
        <%= submit_tag "Search", class: "btn btn-primary btn-block font-weight-bold mr-2" %>
        <%= button_tag "Clear", type: 'button', class: "btn btn-secondary btn-block font-weight-bold", onclick: "clearForm()" %>
      </div>
      
    <% end %>
  </div>
</div>

<script>
  function clearForm() {
    document.getElementById("search-form").reset();
  }
</script>
